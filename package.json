{
  "name": "espanso-gui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"vite --port 5173\" \"electron electron/main.js\"",
    "electron:build": "vite build && node scripts/prepare-electron-build.js && electron-builder --config electron/electron-builder.json",
    "electron:build:mac": "vite build && node scripts/prepare-electron-build.js && electron-builder --mac --config electron/electron-builder.json",
    "electron:package": "vite build && node scripts/package-electron.js",
    "electron:package:mac": "vite build && node scripts/package-electron.js darwin",
    "electron:package:win": "vite build && node scripts/package-electron.js win32",
    "electron:package:linux": "vite build && node scripts/package-electron.js linux",
    "electron:simple-package": "node scripts/simple-package.js",
    "electron:simple-package:mac": "node scripts/simple-package.js darwin",
    "electron:simple-package:win": "node scripts/simple-package.js win32",
    "electron:simple-package:linux": "node scripts/simple-package.js linux",
    "electron:fix": "node scripts/fix-electron-app.js",
    "electron:build:win": "vite build && node scripts/prepare-electron-build.js && electron-builder --win --config electron/electron-builder.json",
    "electron:build:linux": "vite build && node scripts/prepare-electron-build.js && electron-builder --linux --config electron/electron-builder.json",
    "utools:build": "vite build && node scripts/build-utools.js"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@nuxt/ui": "^2.7.4",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.3",
    "js-yaml": "^4.1.0",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.5.13",
    "vue-draggable-next": "^2.2.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "fs-extra": "^11.1.1",
    "lucide-vue-next": "^0.503.0",
    "postcss": "^8.4.31",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.0",
    "vite": "^5.2.6"
  }
}
